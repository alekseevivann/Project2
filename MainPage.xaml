<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2.MainPage"
             Title="Диктофон">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Заголовок -->
            <Label Text="🎤 ДИКТОФОН" 
                   FontSize="32" 
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#2196F3" />

            <!-- Индикатор записи -->
            <Frame x:Name="recordingIndicator"
                   BackgroundColor="#FFEBEE"
                   Padding="15"
                   CornerRadius="10"
                   IsVisible="False">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="🔴 ЗАПИСЬ" 
                           FontSize="18"
                           TextColor="#D32F2F"
                           FontAttributes="Bold" />
                    <Label x:Name="timerLabel"
                           Text="00:00"
                           FontSize="24"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Frame>

            <!-- Индикатор воспроизведения -->
            <Frame x:Name="playbackIndicator"
                   BackgroundColor="#E8F5E9"
                   Padding="15"
                   CornerRadius="10"
                   IsVisible="False">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="▶️ ВОСПРОИЗВЕДЕНИЕ" 
                           FontSize="18"
                           TextColor="#388E3C"
                           FontAttributes="Bold" />
                    <Label x:Name="playbackTimerLabel"
                           Text="00:00"
                           FontSize="24"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Frame>

            <!-- Основные кнопки -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button x:Name="recordButton"
                        Text="🎤 Записать"
                        Clicked="OnRecordClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="10"
                        Grid.Column="0" />

                <Button x:Name="stopButton"
                        Text="⏹️ Стоп"
                        Clicked="OnStopClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="10"
                        IsEnabled="False"
                        Grid.Column="1" />
            </Grid>

            <!-- Записи -->
            <Label Text="📁 ЗАПИСИ" 
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10" />

            <Button Text="🔄 Обновить"
                    Clicked="OnRefreshClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="8" />

            <CollectionView x:Name="recordingsList"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Нет записей"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="16"
                           TextColor="Gray"
                           Margin="0,50" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="0,5" CornerRadius="10" BackgroundColor="#F5F5F5">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding DateDisplay}"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </VerticalStackLayout>

                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding DurationDisplay}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#2196F3"
                                       VerticalOptions="Center" />

                                <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,*" ColumnSpacing="10"
                                      Margin="0,10,0,0">
                                    <Button Text="▶️"
                                            Clicked="OnPlayClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="5"
                                            Grid.Column="0" />

                                    <Button Text="🗑️"
                                            Clicked="OnDeleteClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#F44336"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="5"
                                            Grid.Column="1" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>